

<h1>Posts</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Sport</th>
      <th>Game Information</th>
      <th>Game Date</th>
      <th>Game Time</th>
      <th>Posted By</th>
      <th>Zipcode</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.sport %></td>
        <td><%= post.description%></td>
        <!-- truncate? -->
        <td><%= post.date.strftime('%x')%></td>
        <td><%= post.date.strftime('%I:%M %p')%></td>
        <td><%= post.user.name %></td>
          <td><%= post.zipcode %></td>
        <!-- <td><%= link_to 'Show', post %></td> -->
        <!-- <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

