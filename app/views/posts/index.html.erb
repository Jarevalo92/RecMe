<div class="container">
    <span>
        <h1>Posts</h1>
    </span>
    <div class="panel panel-warning">
        <table id="table" class="table table-hover">
            <div class="panel-heading">All Sports Listings!</div>
            <thead>
                <tr>
                    <th>Sport</th>
                    <th>Game Information</th>
                    <th>Game Date</th>
                    <th>Game Time</th>
                    <th>Posted By</th>
                    <th>Location</th>
                    <!-- <th colspan="3"></th> -->
                </tr>
            </thead>

            <tbody>
                <% @posts.each do |post| %>
                <tr>
                    <td><%= post.sport %></td>
                    <td><%= truncate(post.description, length: 100)%></td>
                    <td><%= post.date%></td>
                    <td><%= post.time%></td>
                    <td><%= post.user.name %></td>
                    <td><%= post.address %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<%= render 'form', post: @post %>

<div class="container">
    <div id="map" class="col-md-12" style='width: 800px; height: 400px;'></div>
    <script type="text/javascript">
        handler = Gmaps.build('Google');
        handler.buildMap({
            provider: {},
            internal: {
                id: 'map'
            }
        }, function () {
            markers = handler.addMarkers(<%=raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
        });
    </script>
