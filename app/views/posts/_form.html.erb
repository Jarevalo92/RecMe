<%= bootstrap_form_for(post, label_errors: true) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :sport %>
  </div>

  <div class="field">
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.text_field :zipcode %>
  </div>


  <div class="field">
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.time_select :time, {ampm: true, minute_step: 15} %>
  </div>




  <div class="actions">
    <%= f.submit %>
