<h1>Posts</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Sport</th>
            <th>Game Information</th>
            <th>Game Date</th>
            <th>Game Time</th>
            <th>Posted By</th>
            <th>Addresss</th>
            <!-- <th colspan="3"></th> -->
        </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>

        <tr>
            <td><%= post.sport %></td>
            <td><%= post.description%></td>
            <td><%= post.date%></td>
            <td><%= post.time%></td>
            <td><%= post.user.name %></td>
            <td><%= post.address %></td>
        </tr>
        <% end %>
    </tbody>
</table>
